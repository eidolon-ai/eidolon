<script>
  function findClosestPointOnPath(path: SVGPathElement, x: number, y: number): number {
    const pathLength = path.getTotalLength();
    let bestDistance = Infinity;
    let bestPoint = 0;

    for (let i = 0; i <= pathLength; i += pathLength / 100) { // Check 100 points along the path
      const point = path.getPointAtLength(i);
      const distance = Math.sqrt((point.x - x) ** 2 + (point.y - y) ** 2);
      if (distance < bestDistance) {
        bestDistance = distance;
        bestPoint = i;
      }
    }

    return bestPoint;
  }

  function animatePulse(gradientId: string) {
    const gradient = document.getElementById(gradientId) as SVGLinearGradientElement | null;
    const path = document.querySelector(`path[stroke="url(#${gradientId})"]`) as SVGPathElement | null;

    if (!gradient || !path) {
      console.error(`Element not found: gradient=${gradientId}, path with stroke url(#${gradientId})`, gradient, path);
      return;
    }

    const pathLength = path.getTotalLength();
    const baseLineLength = 0.05; // 5% of path length
    const maxLineLength = 0.15; // 15% of path length

    // Calculate base duration based on path length (adjust multiplier as needed)
    const baseDuration = pathLength / 60; // 100 pixels per second

    // Initialize progress based on the initial gradient position
    const initialX1 = parseFloat(gradient.getAttribute('x1') || '0');
    const initialY1 = parseFloat(gradient.getAttribute('y1') || '0');
    const initialX2 = parseFloat(gradient.getAttribute('x2') || '0');
    const initialY2 = parseFloat(gradient.getAttribute('y2') || '0');

    let progress = findClosestPointOnPath(path, initialX1, initialY1) / pathLength;
    let endProgress = findClosestPointOnPath(path, initialX2, initialY2) / pathLength;

    let speed = Math.max(1, Math.random() * 2.0);
    let direction = endProgress > progress ? 1 : -1; // Set initial direction

    function resetAnimation() {
      speed = Math.random() * 3.0 + 1;
      if (progress <= 0) {
        direction = 1;
      } else if (progress >= 1) {
        direction = -1;
      } else {
        direction = Math.random() < 0.5 ? 1 : -1; // Randomly choose direction if in the middle
      }
      progress = progress > 1 ? 1 : 0; // Clamp to path ends
    }

    function animate() {
      progress += (speed / baseDuration / 60) * direction; // Assuming 60 FPS
      if (progress > 1 || progress < 0) {
        // resetAnimation();
      }

      const point = path.getPointAtLength(pathLength * progress);

      // Adjust line length based on speed
      const lineLength = speed/ 10;
      endProgress = Math.min(Math.max(progress + lineLength * direction, 0), 1);
      const endPoint = path.getPointAtLength(pathLength * endProgress);

      gradient.setAttribute('x2', point.x.toString());
      gradient.setAttribute('y2', point.y.toString());
      gradient.setAttribute('x1', endPoint.x.toString());
      gradient.setAttribute('y1', endPoint.y.toString());

      if (progress > 0 && progress < 1) {
        requestAnimationFrame(animate);
      } else {
        resetAnimation()
        setTimeout(() => {
          requestAnimationFrame(animate)
        }, Math.random() * 10000);
      }
    }
    
    requestAnimationFrame(animate)
  }
  
  // Animate each pulse
  animatePulse("blue-pulse-1");
  animatePulse("blue-pulse-2");
  animatePulse("pink-pulse-1");
  animatePulse("pink-pulse-2");
  animatePulse("orange-pulse-1");
  animatePulse("orange-pulse-2");
</script>
